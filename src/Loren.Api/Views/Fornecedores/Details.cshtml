</div>

<br />
<hr />
<div>
    <h4>Endereco</h4>
    <partial name="_DetalhesEndereco" />
    <div>
        <a class="btn btn-primary" asp-controller="Enderecos" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </div>
</div>
